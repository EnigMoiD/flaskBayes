*
	padding 0px
	margin 0px

body
	font-family 'Open Sans'
	font-weight 300

.button
	min-height 50px
	max-width 50px
	display inline-block
	width 50%
	background-color blue
	border 1px solid white

	.text
		color white
		text-align center
	
	&.dice
		max-width 29px

.hidden
	display none

.graph
	margin 80px
	overflow visible
	display block
	.axis
		line, path
			fill none
			stroke black
			shape-rendering crispEdges
		text
			font-family 'Open Sans'
			font-weight 300